<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Registrar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido/a, "
        android:textSize="35sp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Llena tus datos para unirte a la Comunidad: "
        android:textSize="17sp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="1dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nombreRegistro"
            android:hint="Nombre">

        </EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/apellidoRegistro"
            android:hint="Apellido">

        </EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rutRegistro"
            android:hint="Rut"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edadRegistro"
            android:hint="Edad"></EditText>


        <Spinner
            android:id="@+id/spinnerUno"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contraRegistro"
            android:hint="ContraseÃ±a">

    </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/direccionRegistro"
            android:hint="Direccion">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/correoRegistro"
            android:hint="Correo">
        </EditText>

        <Button
            android:id="@+id/btnValidar"
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:layout_marginTop="15sp"
            android:text="Validar"
            android:layout_gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>

</LinearLayout>